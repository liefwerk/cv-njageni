<div class="container">
	<h2>Experience</h2>
	<ul class="grid gap-6 grid-cols-1 md:grid-cols-2">
	{%- for item in experience -%}
		<li>
			<h3>{{ item.title }}</h3>
			<span class="italic text-gray-800">{{ item.period }}</span>
			<p class="font-semibold mt-1">{{ item.job }}</p>
			<p class="mt-2">{{ item.description }}</p>
		</li>
	{%- endfor -%}
	</ul>
</div>
